S_0x582e1490a9d0 .scope module, "tb_down_counter" "tb_down_counter" 2 1;
 .timescale 0 0;
v0x582e1491df60_0 .var "clk", 0 0;
v0x582e1491e030_0 .net "count", 2 0, v0x582e1491dd60_0;  1 drivers
v0x582e1491e100_0 .var "reset", 0 0;
S_0x582e1490ab60 .scope module, "uut" "down_counter" 2 8, 3 1 0, S_0x582e1490a9d0;
 .timescale 0 0;
    .port_info 0 /INPUT 1 "clk";
    .port_info 1 /INPUT 1 "reset";
    .port_info 2 /OUTPUT 3 "count";
v0x582e148d2610_0 .net "clk", 0 0, v0x582e1491df60_0;  1 drivers
v0x582e1491dd60_0 .var "count", 2 0;
v0x582e1491de40_0 .net "reset", 0 0, v0x582e1491e100_0;  1 drivers
E_0x582e148d0c60 .event posedge, v0x582e1491de40_0, v0x582e148d2610_0;
    .scope S_0x582e1490ab60;
T_0 ;
    %wait E_0x582e148d0c60;
    %load/vec4 v0x582e1491de40_0;
    %flag_set/vec4 8;
    %jmp/0xz  T_0.0, 8;
    %pushi/vec4 7, 0, 3;
    %assign/vec4 v0x582e1491dd60_0, 0;
    %jmp T_0.1;
T_0.0 ;
    %load/vec4 v0x582e1491dd60_0;
    %cmpi/e 0, 0, 3;
    %jmp/0xz  T_0.2, 4;
    %pushi/vec4 7, 0, 3;
    %assign/vec4 v0x582e1491dd60_0, 0;
    %jmp T_0.3;
T_0.2 ;
    %load/vec4 v0x582e1491dd60_0;
    %subi 1, 0, 3;
    %assign/vec4 v0x582e1491dd60_0, 0;
T_0.3 ;
T_0.1 ;
    %jmp T_0;
    .thread T_0;
    .scope S_0x582e1490a9d0;
T_1 ;
    %delay 5, 0;
    %load/vec4 v0x582e1491df60_0;
    %inv;
    %store/vec4 v0x582e1491df60_0, 0, 1;
    %jmp T_1;
    .thread T_1;
    .scope S_0x582e1490a9d0;
T_2 ;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x582e1491df60_0, 0, 1;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x582e1491e100_0, 0, 1;
    %delay 10, 0;
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x582e1491e100_0, 0, 1;
    %delay 10, 0;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x582e1491e100_0, 0, 1;
    %delay 100, 0;
    %vpi_call 2 32 "$finish" {0 0 0};
    %end;
    .thread T_2;
    .scope S_0x582e1490a9d0;
T_3 ;
    %vpi_call 2 37 "$monitor", "Time = %0t | Reset = %b | Count = %b", $time, v0x582e1491e100_0, v0x582e1491e030_0 {0 0 0};
    %end;
    .thread T_3;
    .scope S_0x582e1490a9d0;
T_4 ;
    %vpi_call 2 42 "$dumpfile", "tb_down_counter.vcd" {0 0 0};
    %vpi_call 2 43 "$dumpvars", 32'sb00000000000000000000000000000000, S_0x582e1490a9d0 {0 0 0};
    %end;
